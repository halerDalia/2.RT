
#include <iostream>
using namespace std;


int brojSlova(char *niz) //broj slova u nizu
{
	if (*niz == '\0')
		return 0;
	if (*c >= 'a' && *c <= 'z')
		return 1 + brojSlova(niz + 1);
	return 0 + brojSlova(niz + 1);



}


int rs(char* c)
{
	if (*c == '\0')
		return 0;
	if (*c >= 'A' && *c <= 'Z')
		return -1 + rs(niz + 1);
	if (*c >= 'a' && *c <= 'z')
		return 1 + rs(niz + 1);
	return 0 + rs(niz + 1);

}



int br(char* niz)
{
	if (*niz == '\0')
		return 1;
	if (*niz == ' ')
		return 1 + br(niz * 1);
	return br(niz * 1);




}



int umnozak(int* p) //umnozak elemenata polja
{

	if (*p == 666)
		return 1;
	return *p * umnozak(p + 1);



}


void izbaciRazmak(char* c)
{

	if (*c == '\0')
		return ;
	if (*c == ' ')
		pom(s);
	izbaciRazmak(c);
	else izbaciRazmak(c + 1);



}


void pom(char* s) // pomocna funkcija koja pomice slova ulijevo
{
	if (*s == '\0')
		return;
	*s = *(s + 1);
	pom(s + 1);




}

